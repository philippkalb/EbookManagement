
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<div class="row" style="margin-top:30px">
    <div class="panel panel-default ">
        <div class="panel-heading ">
            <h3 class="panel-title">Import der bestehenden Bibliothek</h3>
        </div>
        <div class="panel-body">
            <div class="col-md-12">
                <button type="submit" class="btn btn-default" id="importLib">Bibliothek importieren</button>
            </div>
        </div>
    </div>
</div>


<script type="text/javascript">
    $(document).ready(function () {
        $("#importLib").click(function () {
            $.ajax({
                type: "POST",
                url: '@Url.Action("ReImport", "Importer")',
                dataType: "html",
                success: function (data) {
                   $('#importer').html("Import abgeschlossen")
                }, //End of AJAX Success function
                failure: function (data) {
                    alert(data.responseText);
                }, //End of AJAX failure function
                error: function (data) {
                    alert(data.responseText);
                } //End of AJAX error function

            });
        });
 
    });
</script>


